<launch>
    
    <!--- Sim Time -->
    <param name="/use_sim_time" value="true" />


  
    <remap from="/velodyne_points" to="/MODELING/front_laser_3d_sensor/points_processed"/>
    <remap from="/imu/data" to="/X1/imu/data"/>
    <!--- Run Rviz-->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find lego_loam)/launch/test.rviz" />
    

    <!--- TF 
    <node pkg="tf" type="static_transform_publisher" name="camera_init_to_map"  args="0 0 2.0 1.570795   0        1.570795 map    camera_init 10" />
    <node pkg="tf" type="static_transform_publisher" name="base_link_to_camera" args="0 0 0 -1.570795 -1.570795 0        camera base_link   10" />
-->
    <node pkg="tf" type="static_transform_publisher" name="camera_init_to_map"  args="0 0 0.0 1.570795   0        1.570795  cave_circuit_practice_01    camera_init 10" />
    <node pkg="tf" type="static_transform_publisher" name="base_link_to_camera" args="0 0 0.0  -1.5707963267948966  0   0              base_link   camera  10" />
    <!--- LeGO-LOAM -->    
    <node pkg="lego_loam" type="imageProjection"    name="imageProjection"    output="screen"/>
    <node pkg="lego_loam" type="featureAssociation" name="featureAssociation" output="screen">
    <!--disable imu for cloud distortion correction--> 
    <remap from="/imu/data" to="lasdhkasjfhkashfk"/> 
       
    </node>
    <node pkg="lego_loam" type="mapOptmization"     name="mapOptmization"     output="screen"/>
    <node pkg="lego_loam" type="transformFusion"    name="transformFusion"    output="screen"/>

</launch>
